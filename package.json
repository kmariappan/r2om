{
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --onSuccess 'npm run cp:file example/src/lib'",
    "cp:file": "sh ./scripts/after-build.sh",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "commit": "git-cz",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "semantic-release": "semantic-release --branches main"
  },
  "bin": {
    "r2om": "./bin/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "r2om",
  "author": "Karthikeyan Mariappan",
  "description": "Redis Rest Api based Object Mapper",
  "module": "dist/r2om.esm.js",
  "size-limit": [
    {
      "path": "dist/r2om.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/r2om.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.4",
    "@types/yargs": "^17.0.10",
    "@upstash/redis": "^1.10.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4",
    "semantic-release": "^18.0.1",
    "size-limit": "^7.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmariappan/r2om.git"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "prettier": "^2.7.1",
    "recursive-copy": "^2.0.14",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "yargs": "^17.5.1"
  }
}
